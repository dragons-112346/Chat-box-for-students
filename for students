<script>
/* PAGE SWITCH */
function showPage(id) {
  document.querySelectorAll(".page").forEach(p => p.classList.remove("active"));
  document.getElementById(id).classList.add("active");
}

/* CHAT LOGIC (SAME AS BEFORE, SHORTENED) */
let coins = 0;
let inLesson = false;
let step = 0;

const chat = document.getElementById("chat");

function addMessage(text, who="bot") {
  const div = document.createElement("div");
  div.className = who;
  div.textContent = text;
  chat.appendChild(div);
  chat.scrollTop = chat.scrollHeight;
}

function send() {
  const input = document.getElementById("input");
  const text = input.value.trim();
  if (!text) return;

  addMessage(text, "user");
  input.value = "";

  if (!inLesson) {
    inLesson = true;
    step = 1;
    addMessage("ğŸ“˜ Letâ€™s learn step by step!");
    addMessage("ğŸ§© Step 1: What is 2 + 2?");
    return;
  }

  if (step === 1) {
    if (text === "4") {
      addMessage("ğŸ‰ Correct!");
      step = 2;
      addMessage("ğŸ§  Step 2: Why do we add numbers?");
    } else {
      addMessage("ğŸ¤” Try again!");
    }
  } else if (step === 2) {
    addMessage("ğŸ† Lesson complete!");
    coins += 10;
    document.getElementById("coins").textContent = coins;
    inLesson = false;
  }
}

addMessage("ğŸ‘‹ Welcome! Go to Home to start.");
</script>

